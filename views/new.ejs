
    <%- include('partials/header') %>

    <main>
        <div id="form-container">
            <h2>Create Custom Flower Arrangement</h2>
            <form action="/items/new" method="POST" enctype="multipart/form-data">
                <label for="occasion">Occasion:</label>
                <select id="occasion" name="occasion" required>
                    <option value="" disabled selected>Select occasion</option>
                    <option value="Birthday">Birthday</option>
                    <option value="Anniversary">Anniversary</option>
                    <option value="Wedding">Wedding</option>
                    <option value="Funeral">Funeral</option>
                    <option value="Thank You">Thank You</option>
                </select>

                <label for="arrangement-name">Arrangement Name:</label>
                <input type="text" id="arrangement-name" name="arrangement-name" required>

                <label for="seller-name">Seller Name:</label>
                <input type="text" id="seller-name" name="seller-name" required>

                <label for="price">Price ($):</label>
                <input type="number" id="price" name="price" min="0.01" step="0.01" required>

                <label for="condition">Condition:</label>
                <select id="condition" name="condition" required>
                    <option value="" disabled selected>Select condition</option>
                    <option value="New">New</option>
                    <option value="Like New">Like New</option>
                    <option value="Good">Good</option>
                </select>

                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" required></textarea>

                <label for="image">Flower Arrangement Image:</label>
                <input type="file" id="image" name="image" accept="image/*" >

                <button type="submit" id="submit-btn">Submit Arrangement</button>
            </form>
        </div>
    </main>

    <%- include('partials/footer') %>
